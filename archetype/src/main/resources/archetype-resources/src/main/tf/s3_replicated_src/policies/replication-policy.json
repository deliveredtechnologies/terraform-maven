{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Action": [
        "s3:ListBucket",
        "s3:Get",
        "s3:DeleteBucket"
      ],
      "Effect": "Allow",
      "Resource": [
        "${source_bucket_arn}",
        "${destination_bucket_arn}"
      ]
    },
    {
      "Action": [
        "s3:GetReplicationConfiguration",
        "s3:ListBucket",
        "s3:Get"
      ],
      "Effect": "Allow",
      "Resource": [
        "${source_bucket_arn}",
        "${source_bucket_arn}/*"
      ]
    },
    {
      "Action": [
        "s3:GetObjectVersion",
        "s3:GetObjectVersionAcl"
      ],
      "Effect": "Allow",
      "Resource": [
        "${source_bucket_arn}/*"
      ]
    },
    {
      "Action": [
        "s3:ListBucket",
        "s3:Get",
        "s3:ReplicateObject",
        "s3:ReplicateDelete",
        "s3:ReplicateTags",
        "s3:GetObjectVersionTagging"
      ],
      "Effect": "Allow",
      "Resource": "${destination_bucket_arn}/*"
    },
    {
      "Effect": "Allow",
      "Action": [
        "kms:Encrypt",
        "kms:Decrypt",
        "kms:ReEncrypt*",
        "kms:GenerateDataKey*",
        "kms:DescribeKey"
      ],
      "Resource": [
        "${source_kms_key_arn}",
        "${destination_kms_key_arn}"
      ]
    }
  ]
}
